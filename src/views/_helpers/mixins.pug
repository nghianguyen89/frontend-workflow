//- topic row
mixin topic_row(options)
    -link_detail = 'topics-detail.html'
    if options.href 
        -link_detail = options.href

    tr
        th._date= options.date
        if options.cate
            td._cate
                +linkto({href:'#', text:options.cate})
        td._title
            +linkto({href:link_detail, text:options.title, target:options.target})


